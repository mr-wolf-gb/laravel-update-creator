{
  "name": "mr-wolf-gb/laravel-update-creator",
  "description": "Laravel Update Creator is a Laravel package designed to streamline the process of creating update ZIP files for your Laravel projects. This tool identifies all files modified since a specified date, excludes unwanted directories and files, and generates a compressed ZIP file for distribution or deployment.",
  "keywords": [
    "mr-wolf-gb",
    "laravel-update-creator",
    "update",
    "laravel"
  ],
  "homepage": "https://github.com/mr-wolf-gb/laravel-update-creator",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Mr.WOLF",
      "email": "gaiththewolf@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.4",
    "illuminate/support": "^7.0|^8.0|^9.0|^10.0|>=11.0",
    "ext-zip": "*"
  },
  "require-dev": {
    "orchestra/testbench": "^6.0",
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "MrWolfGb\\LaravelUpdateCreator\\": "src"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "MrWolfGb\\LaravelUpdateCreator\\LaravelUpdateCreatorServiceProvider"
      ]
    }
  }
}
